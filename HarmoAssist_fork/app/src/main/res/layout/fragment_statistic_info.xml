<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statisticFragments.StatisticInfoFragment"
    android:orientation="vertical">

    <!-- 전체레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 타이틀 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:text="기본 정보"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="5dp"
                android:background="@color/real_gray">
            </TextView>

            <!-- 항목들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="곡 제목"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:background="@drawable/red_edge"
                        android:padding="5dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/all_black"
                        android:textSize="15sp"
                        android:id="@+id/statistic_music_title"
                        android:layout_marginStart="15dp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="코드"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:background="@drawable/red_edge"
                        android:padding="5dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/all_black"
                        android:textSize="15sp"
                        android:id="@+id/statistic_music_chord"
                        android:layout_marginStart="15dp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="박자"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:background="@drawable/red_edge"
                        android:padding="5dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/all_black"
                        android:textSize="15sp"
                        android:id="@+id/statistic_music_signature"
                        android:layout_marginStart="15dp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="빠르기"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:background="@drawable/red_edge"
                        android:padding="5dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/all_black"
                        android:textSize="15sp"
                        android:id="@+id/statistic_music_tempo"
                        android:layout_marginStart="15dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <!-- 기본 분포도 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 타이틀 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:text="기본 통계"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="5dp"
                android:background="@color/real_gray">
            </TextView>

            <!-- 항목들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="사용된 마디 수"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:background="@drawable/red_edge"
                        android:padding="5dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/all_black"
                        android:textSize="15sp"
                        android:id="@+id/statistic_measure_num"
                        android:layout_marginStart="15dp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="사용된 노트 수"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:background="@drawable/red_edge"
                        android:padding="5dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/all_black"
                        android:textSize="15sp"
                        android:id="@+id/statistic_note_num"
                        android:layout_marginStart="15dp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="노트 평균 길이"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:background="@drawable/red_edge"
                        android:padding="5dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/all_black"
                        android:textSize="15sp"
                        android:id="@+id/statistic_avg_note_len"
                        android:layout_marginStart="15dp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="빠르기"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:background="@drawable/red_edge"
                        android:padding="5dp">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/all_black"
                        android:textSize="15sp"
                        android:id="@+id/statistic_all_music_time"
                        android:layout_marginStart="15dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>