<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statisticFragments.StatisticFragment">

    <!--  스크롤뷰 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/statistic_view">

        <!-- 실제 사용 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 요약 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/real_gray">

                    <!-- 타이틀 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="요약"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:layout_weight="1">
                    </TextView>

                    <!-- 도움말 아이콘 -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info_32_btn"
                        android:layout_gravity="center"
                        android:id="@+id/statistic_summary_info_btn"
                        android:background="@color/real_gray">
                    </ImageButton>
                </LinearLayout>



                <!-- 가장 많이 사용된 키 레이아웃 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/red"
                            android:background="@drawable/red_edge"
                            android:textSize="15sp"
                            android:padding="5dp"
                            android:text="가장 많이 사용된 키">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:text="1."
                            android:textSize="15sp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Major C"
                            android:id="@+id/statistic_much_chord_no_1"
                            android:textColor="@color/red"
                            android:textSize="15sp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:text="2."
                            android:textSize="15sp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Major D"
                            android:id="@+id/statistic_much_chord_no_2"
                            android:textColor="@color/red"
                            android:textSize="15sp">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:text="3."
                            android:textSize="15sp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Major E"
                            android:id="@+id/statistic_much_chord_no_3"
                            android:textColor="@color/red"
                            android:textSize="15sp">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>




                <!-- 가장 많이 사용된 키 레이아웃 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/red"
                            android:background="@drawable/red_edge"
                            android:textSize="15sp"
                            android:padding="5dp"
                            android:text="가장 많이 사용된 피치">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:text="1."
                            android:textSize="15sp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="C"
                            android:id="@+id/statistic_much_pitch_no_1"
                            android:textColor="@color/red"
                            android:textSize="15sp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:text="2."
                            android:textSize="15sp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="D"
                            android:id="@+id/statistic_much_pitch_no_2"
                            android:textColor="@color/red"
                            android:textSize="15sp">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:text="3."
                            android:textSize="15sp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="E"
                            android:id="@+id/statistic_much_pitch_no_3"
                            android:textColor="@color/red"
                            android:textSize="15sp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <!-- 타이틀 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/real_gray">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Pitch Histogram"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:layout_weight="1">
                    </TextView>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info_32_btn"
                        android:layout_gravity="center"
                        android:background="@color/real_gray"
                        android:id="@+id/pitch_histogram_info_btn">
                    </ImageButton>

                </LinearLayout>

                <com.github.mikephil.charting.charts.PieChart
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:minHeight="300dp"
                    android:id="@+id/pitch_chart">
                </com.github.mikephil.charting.charts.PieChart>

            </LinearLayout>

            <!-- 피치 분포도 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <!-- 타이틀 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/real_gray">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Key Signature Histogram"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:layout_weight="1">
                    </TextView>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info_32_btn"
                        android:layout_gravity="center"
                        android:background="@color/real_gray"
                        android:id="@+id/key_signature_histogram_info_btn">
                    </ImageButton>

                </LinearLayout>

                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:minHeight="400dp"
                    android:id="@+id/signature_chart_major">

                </com.github.mikephil.charting.charts.HorizontalBarChart>

                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:minHeight="400dp"
                    android:id="@+id/signature_chart_minor">
                </com.github.mikephil.charting.charts.HorizontalBarChart>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>